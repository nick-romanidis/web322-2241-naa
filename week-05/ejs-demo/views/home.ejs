<h2>Employee List</h2>
<p>Visit the <a href="/about">about page</a>.</p>

<table border="1">
    <tr>
        <td>Name</td>
        <td>Age</td>
        <td>Occupation</td>
        <td>Company</td>
    </tr>
    <% if (employees.length > 0) { %>
        <% employees.forEach(employee => { %>
           <%- include("partials/employee", employee) %>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="4">There are no employees to show.</td>
        </tr>
    <% } %>
</table>